{
  "description": "Defines keyword and regex triggers for detecting 'evidence presence' when no URLs are found",
  "version": "1.0",

  "simple_keywords": [
    "source:",
    "according to",
    "research",
    "data shows",
    "study shows",
    "study found",
    "research shows",
    "research found",
    "reports suggest",
    "evidence suggests",
    "statistics show",
    "findings indicate",
    "analysis reveals",
    "experts say",
    "scientists found",
    "published in",
    "peer-reviewed",
    "citation",
    "reference:",
    "cited by",
    "as reported by",
    "documented in"
  ],

  "sentence_patterns": [
    {
      "description": "Detects 'according to' followed by 'study' in the same sentence",
      "pattern": "according to[^.!?]*\\b(study|studies)\\b",
      "flags": "i"
    },
    {
      "description": "Detects 'according to' followed by 'research' in the same sentence",
      "pattern": "according to[^.!?]*\\b(research|researchers)\\b",
      "flags": "i"
    },
    {
      "description": "Detects 'research shows/suggests/indicates'",
      "pattern": "\\b(research|studies)\\s+(shows?|suggests?|indicates?|reveals?|demonstrates?)\\b",
      "flags": "i"
    },
    {
      "description": "Detects 'data shows/suggests/indicates'",
      "pattern": "\\b(data|statistics)\\s+(shows?|suggests?|indicates?|reveals?)\\b",
      "flags": "i"
    },
    {
      "description": "Detects 'study found/showed/revealed'",
      "pattern": "\\b(study|studies)\\s+(found|showed?|revealed|demonstrated)\\b",
      "flags": "i"
    },
    {
      "description": "Detects 'according to [credible source type]'",
      "pattern": "according to\\s+(the\\s+)?(study|research|report|survey|analysis|experts?|scientists?|doctors?|professor|university|institute|journal)",
      "flags": "i"
    },
    {
      "description": "Detects 'published in [journal/publication]'",
      "pattern": "published (in|by)\\s+",
      "flags": "i"
    },
    {
      "description": "Detects 'X percent/% of' (statistical claims)",
      "pattern": "\\d+\\s*(percent|%|percentage)\\s+of\\b",
      "flags": "i"
    },
    {
      "description": "Detects 'in a study/report/survey'",
      "pattern": "\\bin (a|an|the)\\s+(study|report|survey|research|analysis|paper)",
      "flags": "i"
    },
    {
      "description": "Detects citation formats like [1], (Smith 2020), etc.",
      "pattern": "(\\[\\d+\\]|\\([A-Z][a-z]+\\s+\\d{4}\\)|\\(\\d{4}\\))",
      "flags": ""
    }
  ],

  "multi_word_phrases": [
    "peer reviewed",
    "peer-reviewed",
    "scientific consensus",
    "empirical evidence",
    "clinical trial",
    "clinical trials",
    "meta-analysis",
    "systematic review",
    "case study",
    "observational study",
    "randomized controlled trial",
    "academic journal",
    "scholarly article",
    "scientific paper",
    "white paper"
  ],

  "credibility_indicators": [
    {
      "type": "academic_institutions",
      "keywords": ["university", "institute", "college", "academy", "research center"]
    },
    {
      "type": "government_sources",
      "keywords": ["cdc", "fda", "who", "nih", "government", "department of", "ministry of"]
    },
    {
      "type": "expert_attribution",
      "keywords": ["professor", "dr.", "phd", "scientist", "researcher", "expert", "specialist"]
    },
    {
      "type": "publication_venues",
      "keywords": ["journal", "publication", "proceedings", "conference", "symposium"]
    }
  ]
}
