{
  "manifest_version": 3,
  "name": "TrustLens - Reddit Toxicity Analyzer",
  "version": "0.2.0",
  "description": "Real-time toxicity analysis for Reddit comments with visual badges and comprehensive reporting.",
  "icons": {
    "48": "icon48.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrustLens - Reddit Toxicity Analyzer"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content.js", "trustlens-badges.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "toxicity-badge-manager.js",
        "toxicity-badges.css"
      ],
      "matches": ["*://*.reddit.com/*"]
    }
  ],
  "host_permissions": ["*://*.reddit.com/*"]
}
